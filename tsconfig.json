{
    "compilerOptions": {
      "target": "ES2020",                   // Specifies ECMAScript target version.
      "module": "ESNext",                    // Sets module code generation (ESM for Node.js).
      "moduleResolution": "Node",            // Resolves modules in Node.js style.
      "rootDir": "./src",                    // Root directory of TypeScript source files.
      "outDir": "./dist",                    // Output directory for compiled JavaScript files.
      "strict": true,                        // Enables strict type-checking options.
      "esModuleInterop": true,               // Enables compatibility with CommonJS and ES modules.
      "skipLibCheck": true,                  // Skips type checking for declaration files.
      "forceConsistentCasingInFileNames": true // Ensures consistent casing in import paths.
    },
    "include": ["src/**/*.ts"],              // Specifies which files to include for TypeScript.
    "exclude": ["node_modules"]              // Excludes unnecessary files from the build.
  }